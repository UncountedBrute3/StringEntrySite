@{
    ViewData["Title"] = "Data Submission";
}

<div class="text-center">
    <h1 class="display-4">Data Submission</h1>
    <form>
        <div class="form-group">
            <label for="data">Sentence</label>
            <input type="text" class="form-control" id="data" placeholder="Enter a sentence">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
    <div id="results"></div>
</div>

@section Scripts
{
    <script src="@Url.Content("~/js/dataSubmission.js")"></script>
}